<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieePlot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowNoTitle"                    >true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#004071</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Splash.Theme" parent="Theme.MovieePlot">
        <item name="android:windowFullscreen"       >true</item>
        <item name="android:windowIsTranslucent"    >true</item>
        <item name="windowActionBar"                >false</item>
        <item name="windowNoTitle"                  >true</item>
    </style>

    <style name="SlideInOutAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


    <style name="TextAppearance.App.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TextAppearance.App.Version" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>

</resources>